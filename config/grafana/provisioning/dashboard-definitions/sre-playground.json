{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "type": "row",
      "title": "Overview",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "Request Rate (req/s)",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "" },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"sre-playground\"}[1m]))",
          "legendFormat": "req/s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          },
          "unit": "reqps"
        }
      }
    },
    {
      "type": "stat",
      "title": "Error Rate (err/s)",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "" },
      "targets": [
        {
          "expr": "sum(rate(app_errors_total{job=\"sre-playground\"}[1m]))",
          "legendFormat": "err/s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.5 },
              { "color": "red", "value": 5 }
            ]
          },
          "unit": "ops"
        }
      }
    },
    {
      "type": "stat",
      "title": "CPU Spikes Triggered",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "" },
      "targets": [
        {
          "expr": "cpu_spike_total{job=\"sre-playground\"}",
          "legendFormat": "total"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "type": "gauge",
      "title": "Memory Allocation",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "" },
      "targets": [
        {
          "expr": "app_memory_usage_bytes{job=\"sre-playground\"}",
          "legendFormat": "bytes"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "min": 0,
          "max": 1073741824,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 268435456 },
              { "color": "red", "value": 536870912 }
            ]
          },
          "unit": "decbytes"
        }
      }
    },
    {
      "type": "row",
      "title": "Request Latency",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Request Duration Percentiles",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "" },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"sre-playground\"}[1m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"sre-playground\"}[1m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"sre-playground\"}[1m])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto"
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Request Duration by Endpoint",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"sre-playground\"}[1m])) by (le, endpoint))",
          "legendFormat": "{{ endpoint }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "type": "row",
      "title": "Errors",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Error Rate by Type",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "" },
      "targets": [
        {
          "expr": "sum(rate(app_errors_total{job=\"sre-playground\"}[1m])) by (error_type)",
          "legendFormat": "{{ error_type }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 50,
            "lineWidth": 1,
            "stacking": { "mode": "normal" }
          },
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "HTTP Requests by Status Code",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "" },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"sre-playground\"}[1m])) by (status_code)",
          "legendFormat": "{{ status_code }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 15
          }
        }
      }
    },
    {
      "type": "row",
      "title": "Simulations",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "CPU Spike Rate",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "" },
      "targets": [
        {
          "expr": "rate(cpu_spike_total{job=\"sre-playground\"}[1m])",
          "legendFormat": "spikes/s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20
          },
          "color": { "fixedColor": "red", "mode": "fixed" }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (App Allocated)",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "" },
      "targets": [
        {
          "expr": "app_memory_usage_bytes{job=\"sre-playground\"}",
          "legendFormat": "allocated"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 25
          },
          "color": { "fixedColor": "purple", "mode": "fixed" }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Active Simulations",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "" },
      "targets": [
        {
          "expr": "active_simulations{job=\"sre-playground\"}",
          "legendFormat": "{{ simulation_type }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 30
          }
        }
      }
    }
  ],
  "refresh": "10s",
  "schemaVersion": 39,
  "tags": ["sre", "playground", "observability"],
  "templating": { "list": [] },
  "time": { "from": "now-30m", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "SRE Playground",
  "uid": "sre-playground",
  "version": 1
}
